<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.taller.estudiantevistas.controlador.ControladorPrincipal"
            stylesheets="@../css/principal.css"
            prefWidth="1200" prefHeight="700" styleClass="root">

    <!-- BARRA SUPERIOR: Campo de búsqueda, botón buscar, combo tipo -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <TextField fx:id="campoBusqueda" promptText="Buscar..." styleClass="search-field"/>

            <Button fx:id="btnBuscar" graphicTextGap="0" styleClass="icon-button">
                <graphic>
                    <ImageView fx:id="imgLupa" fitWidth="30" fitHeight="30" preserveRatio="true"/>
                </graphic>
            </Button>

            <ComboBox fx:id="comboTipo" promptText="Tipo" styleClass="combo-box"/>
        </HBox>
    </top>

    <!-- CENTRO: Contenidos y solicitudes -->
    <center>
        <HBox spacing="50" alignment="CENTER">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <!-- Panel de Contenidos Educativos -->
            <VBox spacing="15" alignment="CENTER">
                <Button fx:id="btnRecargarContenidos" text="Recargar contenidos" styleClass="main-button"/>
                <Pane fx:id="panelContenidos" prefWidth="350" prefHeight="400" styleClass="content-pane"/>
            </VBox>

            <!-- Dentro del VBox que contiene el panel de solicitudes -->
            <VBox spacing="15" alignment="CENTER">
                <!-- Reemplaza el HBox que contiene los botones con este código mejorado -->
                <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 0 0 10 0;">
                    <Button fx:id="btnRecargarSolicitudes" styleClass="recargar-button">
                        <graphic>
                            <ImageView fx:id="imgRecargar" fitWidth="20" fitHeight="20" preserveRatio="true" />
                        </graphic>
                    </Button>
                    <Button fx:id="btnNuevaSolicitud" text="Nueva Solicitud" styleClass="nueva-solicitud-btn"
                            style="-fx-margin: 0 0 0 20;"/>
                </HBox>
                <Pane fx:id="panelSolicitudes" prefWidth="350" prefHeight="400" styleClass="solicitud-pane"/>
            </VBox>
        </HBox>
    </center>

    <!-- LADO DERECHO: Botones de usuario -->
    <right>
        <VBox spacing="15" alignment="TOP_CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="10"/>
            </padding>

            <Button fx:id="btnAjustes" styleClass="icon-button">
                <graphic>
                    <ImageView fx:id="imgAjustes" fitWidth="32" fitHeight="32" preserveRatio="true"/>
                </graphic>
            </Button>

            <Button fx:id="btnNotificaciones" styleClass="icon-button">
                <graphic>
                    <ImageView fx:id="imgCampana" fitWidth="32" fitHeight="32" preserveRatio="true"/>
                </graphic>
            </Button>

            <Button fx:id="btnChat" styleClass="icon-button">
                <graphic>
                    <ImageView fx:id="imgChat" fitWidth="32" fitHeight="32" preserveRatio="true"/>
                </graphic>
            </Button>

            <Button fx:id="btnPerfil" styleClass="icon-button">
                <graphic>
                    <ImageView fx:id="imgPerfil" fitWidth="32" fitHeight="32" preserveRatio="true"/>
                </graphic>
            </Button>

            <Button fx:id="btnContacto" styleClass="icon-button">
                <graphic>
                    <ImageView fx:id="imgContacto" fitWidth="32" fitHeight="32" preserveRatio="true"/>
                </graphic>
            </Button>
        </VBox>
    </right>
</BorderPane>